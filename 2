def calculate_length(width, weight, density=0.175):
    """
    Calculate the length of fabric in meters based on its width and weight.

    Args:
        width (float): Width of fabric in meters.
        weight (float): Weight of fabric in kilograms.
        density (float, optional): Density of fabric in kg/mÂ². Defaults to 0.175.

    Returns:
        float: Length of fabric in meters.
    """
    area = weight / density  # Area in square meters
    length = area / width  # Length in meters
    return length


def main():
    print("Fabric Length Calculator")
    width = float(input("Enter the width of fabric in meters: "))
    weight = float(input("Enter the weight of fabric in kilograms: "))
    length = calculate_length(width, weight)

    print(f"The length of fabric is approximately {length:.2f} meters.")


if __name__ == "__main__":
    main()
